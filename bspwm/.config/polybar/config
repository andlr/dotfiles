[colors]
background = #eff1f5
background-alt = #eff1f5
foreground = #4c4f69
foreground-alt = #4c4f69
primary = #e64553
secondary = #1e66f5
alert = #d20f39
warn = #fe640b

[bar/base]
monitor = ${env:MONITOR:}
width = 100%
height = 22
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = FiraCode Nerd Font:size=11:antialias=true;2

wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

border-bottom-size = 2
border-bottom-color = ${colors.secondary}

[bar/main]
inherit = bar/base

modules-left = bspwm
;modules-center = spotify spotify-prev spotify-play-pause spotify-next
modules-right = updates volume bluetooth cpu memory filesystem wlan eth battery temperature xkeyboard date

tray-position = right
tray-padding = 2

[bar/satellite]
inherit = bar/base

modules-left = bspwm
modules-center =
modules-right = updates volume cpu memory filesystem wlan eth battery temperature xkeyboard date

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
